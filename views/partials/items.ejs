<% if (message) { %>
  <div class="<%= success ? 'text-green-600' : 'text-red-600' %>">
    <%= message %>
  </div>
<% } %> 
<div class="bg-white p-6 rounded shadow-md max-w-3xl mx-auto">
  <!-- Tabs -->
  <div class="mb-6 border-b border-gray-200">
    <nav class="flex space-x-6" id="tabs">
      <button
        class="tab-button text-blue-600 border-b-2 border-blue-600 py-2 px-4 font-semibold"
        data-tab="update-tab"
      >Update Data</button>
      <button
        class="tab-button text-gray-600 hover:text-blue-600 py-2 px-4"
        data-tab="add-tab"
      >Add Item</button>
    </nav>
  </div>

 <!-- Update Tab -->
<div id="update-tab" class="tab-content space-y-4">
  <!-- Search Bar -->
  <form method="POST" id="searchForm" enctype="multipart/form-data" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Search Item</label>
      <input
        type="text"
        name="search"
        class="mt-1 w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:ring focus:ring-blue-300"
        placeholder="Enter item name or ID"
      >
    </div>
    <button type="submit" class="mt-2 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
      Search
    </button>
  </form>

  <!-- Grid Layout: Results | Update Form -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    
     <!-- Scrollable Search Results -->
  <div class="overflow-hidden">
    <ul id="searchResults" class="space-y-2 max-h-[600px] overflow-y-auto pr-2">
      <!-- Dynamic list items will go here -->
    </ul>
  </div>

    <!-- Update Form -->
    <form
      id="updateForm"
      method="POST"
      enctype="multipart/form-data"
      class="space-y-4 bg-gray-50 p-4 rounded shadow hidden"
    >
      <input type="hidden" name="id">

      <!-- Product Name -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Item Name</label>
        <input
          type="text"
          name="product_name"
          class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
          required
        >
      </div>

      <!-- Quantity -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Quantity</label>
        <input
          type="number"
          name="quantity"
          class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
          required
        >
      </div>

      <!-- Category -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Category</label>
        <input
          type="text"
          name="category"
          class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
          required
        >
      </div>

      <!-- Price -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Price</label>
        <input
          type="number"
          step="0.01"
          name="price"
          class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
          required
        >
      </div>

      <!-- Image Upload -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Upload New Image</label>
        <input
          type="file"
          name="image"
          accept="image/*"
          class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
        >
      </div>

      <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">
        Update Item
      </button>
    </form>
  </div>
</div>
<!-- Add Tab -->

  <div id="add-tab" class="tab-content hidden space-y-4">
    <form id="addForm" method="POST" enctype="multipart/form-data" class="space-y-4">
     <!-- Product Name -->
  <div>
    <label class="block text-sm font-medium text-gray-700">Item Name</label>
    <input type="text" name="product_name" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" placeholder="Enter item name" required>
  </div>

  <!-- Quantity -->
  <div>
    <label class="block text-sm font-medium text-gray-700">Quantity</label>
    <input type="number" name="quantity" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" placeholder="Enter quantity" required>
  </div>

  <!-- Category -->
  <div>
    <label class="block text-sm font-medium text-gray-700">Category</label>
    <input type="text" name="category" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" placeholder="Enter category" required>
  </div>

  <!-- Price -->
  <div>
    <label class="block text-sm font-medium text-gray-700">Price</label>
    <input type="number" step="0.01" name="price" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" placeholder="Enter price" required>
  </div>

  <!-- Image URL -->
 <div>
    <label class="block text-sm font-medium text-gray-700">Upload Image</label>
    <input type="file" name="image" accept="image/*" class="mt-1 w-full border border-gray-300 rounded px-3 py-2">
 
  </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Add Item</button>
    </form>
  </div>
</div>
