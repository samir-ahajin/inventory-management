
<div class="bg-white p-6 rounded shadow-md max-w-3xl mx-auto">
  <!-- Tabs -->
  <div class="mb-6 border-b border-gray-200">
    <nav class="flex space-x-6" id="tabs">
      <button
        class="tab-button text-blue-600 border-b-2 border-blue-600 py-2 px-4 font-semibold"
        data-tab="update-tab"
      >Update Data</button>
      <button
        class="tab-button text-gray-600 hover:text-blue-600 py-2 px-4"
        data-tab="add-tab"
      >Add Item</button>
    </nav>
  </div>

  <!-- Tab Contents -->
  <div id="update-tab" class="tab-content space-y-4">
    <form id="updateForm"  method="POST" action="javascript:void(0)" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Search Item</label>
        <input type="text" name="search" class="mt-1 w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:ring focus:ring-blue-300" placeholder="Enter item name or ID">
        <button type="button" class="mt-2 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Search</button>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Item Name</label>
        <input type="text" name="name" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" value="Sample Item">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Quantity</label>
        <input type="number" name="quantity" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" value="10">
      </div>

      <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Update Item</button>
    </form>
  </div>

  <div id="add-tab" class="tab-content hidden space-y-4">
    <form id="addForm" method="POST" action="/add" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Item Name</label>
        <input type="text" name="product_name" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" placeholder="Enter item name">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Quantity</label>
        <input type="number" name="quantity" class="mt-1 w-full border border-gray-300 rounded px-3 py-2" placeholder="Enter quantity">
      </div>

      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Add Item</button>
    </form>
  </div>
</div>

