<li
  class="searchValue cursor-pointer p-4 rounded-xl border border-gray-200 shadow transition-all duration-200 ease-in-out
         hover:bg-gray-100 hover:scale-[1.02] active:scale-95 active:shadow-inner
         mb-2 bg-white"
  data-id="<%= searchData.id %>"
  data-name="<%= searchData.product_name %>"
  data-category="<%= searchData.product_category %>"
  data-price="<%= searchData.price %>"
  data-quantity="<%= searchData.quantity %>"
  data-image="<%= searchData.image_sample %>"
  data-updated="<%= searchData.updated_date || '' %>"
>
  <div class="flex flex-col w-full h-full">
    <div class="text-lg font-semibold text-gray-800 mb-1">
      <%= searchData.product_name %>
    </div>
    <div class="text-sm text-gray-600">
      Quantity: <%= searchData.quantity %>
    </div>
    <div class="text-sm text-gray-500 italic">
      Updated:
      <%= searchData.updated_date ? new Date(searchData.updated_date).toLocaleDateString() : '' %>
    </div>
  </div>
</li>